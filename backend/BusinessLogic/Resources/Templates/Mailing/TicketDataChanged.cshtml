@page
@using DomainLayer.BusinessLogic.Mailing.Models
@model TicketDataChangedModel

<!-- Begin document -->

@{
    Layout = "mailLayout";
}

@if (Model.TitleChange is not null)
{
    <h2>@Model.Localizer.Localize("Title") @Model.Localizer.Localize("changed")</h2>
    <p>@Model.TitleChange?.OldValue <img src="@Model.AutoValues.ArrowRightIconSrc" alt="->" class="icon" /> @Model.TitleChange?.NewValue</p>
}

@if (Model.DescriptionChange is not null)
{
    <h2>@Model.Localizer.Localize("Description") @Model.Localizer.Localize("changed")</h2>
    <div class="card">
        <p>@Model.DescriptionChange?.OldValue</p>
        <img src="@Model.AutoValues.ArrowDownIconSrc" alt="v" class="icon card-separator" />
        <p>@Model.DescriptionChange?.NewValue</p>
    </div>
}

@if (Model.PriorityChange is not null)
{
    <h2>@Model.Localizer.Localize("Priority") @Model.Localizer.Localize("changed")</h2>
    <p>
        <span class="color-dot" style="background-color: @Model.PriorityChange?.OldValue.Color"></span> @Model.PriorityChange?.OldValue.Name
        <img src="@Model.AutoValues.ArrowRightIconSrc" alt="---" class="icon" />
        <span class="color-dot" style="background-color: @Model.PriorityChange?.NewValue.Color"></span> @Model.PriorityChange?.NewValue.Name
    </p>
}

@if (Model.StateChange is not null)
{
    <h2>@Model.Localizer.Localize("State") @Model.Localizer.Localize("changed")</h2>
    <p>
        <span class="color-dot" style="background-color: @Model.StateChange?.OldValue.Color"></span> @Model.StateChange?.OldValue.Name
        <img src="@Model.AutoValues.ArrowRightIconSrc" alt="---" class="icon" />
        <span class="color-dot" style="background-color: @Model.StateChange?.NewValue.Color"></span> @Model.StateChange?.NewValue.Name
    </p>
}

@if (Model.BuildingChange is not null)
{
    <h2>@Model.Localizer.Localize("Building") @Model.Localizer.Localize("changed")</h2>
    <p>@Model.BuildingChange?.OldValue <img src="@Model.AutoValues.ArrowRightIconSrc" alt="---" class="icon" />  @Model.BuildingChange?.NewValue</p>
}

@if (Model.RoomChange is not null)
{
    <h2>@Model.Localizer.Localize("Room") @Model.Localizer.Localize("changed")</h2>
    <p>@Model.RoomChange?.OldValue <img src="@Model.AutoValues.ArrowRightIconSrc" alt="---" class="icon" />  @Model.RoomChange?.NewValue</p>
}

@if (Model.ObjectChange is not null)
{
    <h2>@Model.Localizer.Localize("Affected object") @Model.Localizer.Localize("changed")</h2>
    <p>@Model.ObjectChange?.OldValue <img src="@Model.AutoValues.ArrowRightIconSrc" alt="---" class="icon" />  @Model.ObjectChange?.NewValue</p>
}